# ---------------------------------------------------------------------------
#   Create module that contains Swift specific project information.
# ---------------------------------------------------------------------------
function java_create_project_module (project, wrapper)
    check_arguments (my, "project, wrapper", my)

    assert_attribute (my.wrapper, "lang", my)
    assert_attributes (my.project, "name, prefix, framework", my)
    assert_item (my.project, "license", my)

    echo_info ("Create Java project for project: '$(my.project.name:)'", my)

    new java_project to my.wrapper
        . = my.project. ?
        .name = my.project.name
        .prefix = my.project.prefix
        .package = java_derive_package_name(my.project, my.wrapper)
        .package_dir = java_derive_package_dir(my.project, my.wrapper)
        .source_dir = java_derive_src_dir(my.project, my.wrapper)
        .jni_source_dir = java_derive_jni_dir(my.project, my.wrapper)
        .class_native_utils = "com.virgilsecurity.crypto.common.utils.NativeUtils"
        .c_umbrella_header = make_ref_c (make_id ("header", my.project.name, "public"))

        copy my.project->license to java_project

        new java_uid to java_project
            .name = java_project.package
            .uid = "java_import_name"
        endnew

        for my.project.require where defined (require.project) & string_equal (require.feature, "library")
            my.required_java_project = my.wrapper->java_project (name = require.project) ?

            if defined (my.required_java_project)
                new java_import to java_project
                    .import = make_ref_java (make_id ("project", require.project, "import name")) + ".*"
                endnew
            endif
        endfor

        return java_project
    endnew
endfunction

