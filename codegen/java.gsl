# ---------------------------------------------------------------------------
#   Create module with Java enum from the abstract 'enum' notion.
# ---------------------------------------------------------------------------
function java_create_enum_module (enum, java_project, meta)
    check_arguments (my, "enum, java_project, meta", my)

    if my.enum.name = "status"
        java_create_exception_module (my.enum, my.java_project, my.meta)
        return
    endif

    echo_info ("Create <java_module/> from enum: '$(my.enum.name:)'", my)

    assert_attribute (my.enum, "name", my)

    new java_module to my.java_project
        .name = java_derive_enum_name (my.enum, my.java_project)
        .package = my.java_project.package
        .package_dir = my.java_project.package_dir
        .source_file_name = 0.name + ".java"
        .source_file_path = cat_path (my.java_project.source_dir, 0.source_file_name)

        new java_license to java_module
            . = java_format_license (my.java_project->license) ?
        endnew

        for my.java_project.java_import
            copy java_import to java_module
        endfor

        new java_enum to java_module
            . = java_format_description (my.enum) ?
            .name = java_derive_enum_name (my.enum, my.java_project)

            java_map_attr_visibility (java_enum, my.enum)
            java_map_attr_scope (java_enum, my.enum)

            java_map_enum_default (java_enum, my.enum, my.java_project, my.meta)

            new java_method to java_enum
                .name = "fromCode"
                .visibility = "public"
                .static = "static"

                new java_argument to java_method
                    .name = "code"
                    .type = "int"
                endnew

                new java_code to java_method
                    . = "\
                        for ($(java_enum.name:) a : $(java_enum.name:).values()) {
                            if (a.code == code) {
                                return a;
                            }
                        }
                        return null;
                    "
                endnew

                new java_return to java_method
                    .type = "$(java_enum.name:)"
                endnew

                .code = "\
                    public static AlgId fromCode(int code) {
                        for (AlgId a : AlgId.values()) {
                            if (a.code == code) {
                                return a;
                            }
                        }
                    return null;
                    }
                "
            endnew
        endnew
    endnew

    echo_debug ("Done", my)
endfunction

# ---------------------------------------------------------------------------
#   Create module with Java exception from the abstract 'enum' notion.
# ---------------------------------------------------------------------------
function java_create_exception_module (enum, java_project, meta)
    check_arguments (my, "enum, java_project, meta", my)

    echo_info ("Create <java_module/> from enum: '$(my.enum.name:)'", my)

    assert_attribute (my.enum, "name", my)

    new java_module to my.java_project
        .name = java_derive_exception_name (my.enum, my.java_project)
        .package = my.java_project.package
        .package_dir = my.java_project.package_dir
        .source_file_name = 0.name + ".java"
        .source_file_path = cat_path (my.java_project.source_dir, 0.source_file_name)

        new java_license to java_module
            . = java_format_license (my.java_project->license) ?
        endnew

        for my.java_project.java_import
            copy java_import to java_module
        endfor

        new java_class to java_module
            . = java_format_description (my.enum) ?
            .name = java_derive_exception_name (my.enum, my.java_project)

            java_map_attr_visibility (java_class, my.enum)
            java_map_attr_scope (java_class, my.enum)

            new java_extend to java_class
                .type = "RuntimeException"
            endnew

            my.message_code = format_left("\
                switch (this.statusCode) {")

            for my.enum.constant
                if defined(constant.value)
                    my.the_value = constant.value
                elsif defined(my.last_value)
                    my.the_value = my.last_value + 1
                else
                    my.the_value = 0
                endif
                my.last_value = my.the_value

                my.constant_name = java_derive_constant_name (constant, my.java_project)
                new java_field to java_class
                    . = java_format_description (constant) ?
                    .name = my.constant_name
                    .type = java_derive_constant_type (constant, my.java_project)
                    .value = my.the_value
                    .access = "readonly"
                    .visibility = "public"
                    .static = "static"
                    .final = "final"
                endnew

                my.case_result = string_to_singleline(constant.?"")
                my.message_code += format_left("\
                    case $(my.constant_name:):
                        return \"$(my.case_result:)\";")
            endfor
            my.message_code += format_left("\
                default:
                    return \"Unknown error\";
                }")

            new java_field to java_class
                . = java_format_description (constant) ?
                .name = "statusCode"
                .type = "int"
                .visibility = "private"
            endnew

            new java_constructor to java_class
                . = "/* Create new instance. */"
                .visibility = "public"

                new java_argument to java_constructor
                    .name = "statusCode"
                    .type = "int"
                endnew

                new java_code
                    . = "
                    super();
                    this.statusCode = statusCode;"
                endnew
            endnew

            new java_method to java_class
                . = ""
                .name = java_derive_getter_name_str ("statusCode")
                .visibility = "public"

                new java_code to java_method
                    . = "return this.statusCode;"
                endnew

                new java_return to java_method
                    .type = "int"
                    .access = "readonly"
                    .is_enum = "0"
                    .is_reference = "0"
                endnew
            endnew

            new java_method to java_class
                . = ""
                .name = java_derive_getter_name_str ("message")
                .visibility = "public"

                new java_return to java_method
                    .type = "String"
                    .access = "readonly"
                endnew

                new java_code to java_method
                    . = my.message_code
                endnew
            endnew
        endnew
    endnew

