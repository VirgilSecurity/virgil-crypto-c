# ---------------------------------------------------------------------------
#   Add new <java_class/> that encapsulate multiple objects returned by
#   method.
# ---------------------------------------------------------------------------
function java_create_result_class (parent, java_method, java_project, meta)
    check_arguments (my, "parent, java_method, java_project, meta", my)

    assert_attributes (my.parent, "name, visibility", my)
    assert_attribute (my.java_method, "name", my)

    if item_in (my.parent, "java_class") & defined (my.java_method.interface)
        for my.java_method.java_return
            delete java_return
        endfor

        new java_return to my.java_method
            .type = java_derive_result_class_name (my.parent, my.java_method)
        endnew

        return
    endif

    new java_module to my.java_project
        .name = java_derive_result_class_name (my.parent, my.java_method)
        .package = my.java_project.package
        .package_dir = my.java_project.package_dir
        .source_file_name = 0.name + ".java"
        .source_file_path = cat_path (my.java_project.source_dir, 0.source_file_name)

        new java_license to java_module
            . = java_format_license (my.java_project->license) ?
        endnew

        for my.java_project.java_import
            copy java_import to java_module
        endfor

        new java_class to java_module
            . = "/* Encapsulate result of method $(my.parent.name:).$(my.java_method.name:)() */"
            .name = java_derive_result_class_name (my.parent, my.java_method)
            .visibility = my.parent.visibility

            for my.java_method.java_return
                my.field_name = java_return.name ? "theResult"
                my.field_type = java_return.type

                new java_field to java_class
                    .name = my.field_name
                    .type = my.field_type
                    .access = "readonly"
                    .visibility = "private"
                endnew

                # Getter
                new java_method to java_class
                    . = ""
                    .name = java_derive_getter_name_str (my.field_name)
                    .visibility = "public"

                    new java_code to java_method
                        . = "return this.$(my.field_name:);"
                    endnew

                    new java_return to java_method
                        .type = my.field_type
                        .access = "readonly"
                        .is_enum = "0"
                        .is_reference = "0"
                    endnew
                endnew

                # Setter
                new java_method to java_class
                    . = ""
                    .name = java_derive_setter_name_str (my.field_name)
                    .visibility = "public"

                    new java_argument to java_method
                        .name = my.field_name
                        .type = my.field_type
                        .is_enum = "0"
                        .is_reference = "0"
                    endnew

                    new java_code to java_method
                        . = "this.$(my.field_name:) = $(my.field_name:);"
                    endnew
                endnew

                delete java_return
            endfor

            new java_return to my.java_method
                .type = java_class.name
            endnew

            # Default constructor
            new java_constructor to java_class
                . = "/* Create new instance of $(java_class.name:). */"
                .visibility = "package"

                new java_code to java_constructor
                    . = "\
                        super();
                    "
                endnew
            endnew

            new java_constructor to java_class
                . = "/** Initialize all properties. */"
                .visibility = "package"

                for java_class.java_field
                    copy java_field as java_argument to java_constructor
                endfor

                new java_code to java_constructor
                    my.method_body ?= format_left("super();")

                    for java_class.java_field
                        my.method_body += format_left ("\
                            this.$(java_field.name:) = $(java_field.name:);
                        ")
                    endfor

                    . = my.method_body
                endnew
            endnew

            return java_class
        endnew
    endnew
endfunction

