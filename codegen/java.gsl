# ---------------------------------------------------------------------------
#   Return formatted arguments list that is to by passed to the JNI method.
# ---------------------------------------------------------------------------
function java_format_jni_args (class, method)
    check_arguments (my, "class, method", my)

    if string_in (my.class.context, "none")
        my.jni_args = ""
    elsif is_true (my.method.is_static)
    #elsif (! defined (my.method.interface)) & is_true (my.method.is_static)
        my.jni_args = ""
    else
        my.jni_args = "this.cCtx"
    endif

    for my.method.argument where ! string_in (argument.class, "error")
        my.jni_args ?= ""

        if argument.access <> "writeonly"
            if my.jni_args <> ""
                my.jni_args += ", "
            endif

            my.jni_args += java_derive_instance_name (argument)
        endif
    endfor

    return my.jni_args ? ""
endfunction

