# ---------------------------------------------------------------------------
#   Create entity <java_method/> with <method/> declaration.
# ---------------------------------------------------------------------------
function java_create_method_declaration (class, method, destination, java_project, meta)
    check_arguments (my, "class, method, destination, java_project, meta", my)

    new java_method to my.destination
        . = java_format_description (my.method) ?
        .name = java_derive_method_name (method, my.java_project)
        .throws = java_derive_method_throws (my.method, my.java_project) ?
        .interface = my.method.interface ?

        if ! defined (my.method.interface)
            .static = is_true (my.method.is_static) ?? "static" ?
        endif

        java_map_attr_visibility (java_method, my.method)

        for my.method.argument
            if argument.access <> "writeonly"
                echo_debug ("Create argument '$(argument.name:)' for method '$(my.method.name:)'", my)
                java_create_argument (argument, java_method, my.java_project, my.meta)
            endif

            if (string_in (argument.class, "buffer") & string_in (argument.access, "readwrite, writeonly")) \
                | string_equal (argument.class, "str buffer")

                java_create_return_from_argument (my.class, my.method, argument, java_method, my.java_project, my.meta)
            endif
        endfor

        for my.method.return where ! string_equal (return.enum, "status")
            java_create_return (return, java_method, my.java_project, my.meta)
        endfor

        return java_method
    endnew
endfunction

