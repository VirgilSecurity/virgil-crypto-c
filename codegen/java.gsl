# ---------------------------------------------------------------------------
#   Create default <java_constructor/> that initialize underlying C context.
# ---------------------------------------------------------------------------
function java_create_class_default_constructor (java_class, class, java_project, meta)
    check_arguments (my, "java_class, class, java_project, meta", my)

    new java_constructor to my.java_class
        . = "/* Create underlying C context. */"
        .visibility = "public"

        new java_code to java_constructor
            . = "\
                super();
                this.cCtx = $(java_derive_jni_context_class_name(my.java_project)).INSTANCE.$(my.class.name:Camel)_new();
            "
        endnew
    endnew

    new java_constructor to my.java_class
        . = "/* Wrap underlying C context. */"
        .visibility = "package"

        new java_argument to java_constructor
            .name = "contextHolder"
            .type = java_derive_context_holder_class_name (my.java_project)
            .is_enum = "0"
            .is_reference = "0"
        endnew

        new java_code to java_constructor
            . = "\
                this.cCtx = contextHolder.cCtx;
            "
        endnew
    endnew


    new java_method to my.java_class
        . = "
            /*
            * Acquire C context.
            * Note. This method is used in generated code only, and SHOULD NOT be used in another way.
            */
        "
        .name = "getInstance"
        .visibility = "public"
        .static = "static"

        new java_argument to java_method
            .name = "cCtx"
            .type = java_derive_class_context_type (my.class)
        endnew

        new java_return to java_method
            .type = my.java_class.name
        endnew

        my.contextHolderClass = java_derive_context_holder_class_name (my.java_project)
        new java_code to java_method
            . = "\
                $(my.contextHolderClass:) ctxHolder = new $(my.contextHolderClass:)(cCtx);
                return new $(my.java_class.name:)(ctxHolder);
            "
        endnew
    endnew

    java_create_class_c_default_constructor (my.java_class, my.class, my.java_project, my.meta)
    java_create_class_jni_default_constructor (my.java_class, my.class, my.java_project, my.meta)
endfunction

# ---------------------------------------------------------------------------
#   Create <java_constructor/> from abstract entity <constructor/>.
# ---------------------------------------------------------------------------
function java_create_class_constructor (class, constructor, destination, java_project, meta)
    check_arguments (my, "class, constructor, destination, java_project, meta", my)

    new java_constructor to my.destination
        . = java_format_description (my.constructor) ?
        .visibility = "public"

        for my.constructor.argument
            java_create_argument (argument, java_constructor, my.java_project, my.meta)
        endfor

        my.proxy_args = java_format_jni_args (my.class, my.constructor)

        new java_code to java_constructor
            . = "\
                super();
                this.cCtx = $(java_derive_jni_context_class_name(my.java_project)).INSTANCE.$(my.class.name:Camel)_new($(my.proxy_args:));
            "
        endnew

        java_create_jni_class_constructor (my.class, my.constructor,  my.java_project, my.meta)
        java_create_c_class_constructor (my.class, my.constructor, my.destination, java_constructor, my.java_project, my.meta)

        return java_constructor
    endnew
endfunction

# ---------------------------------------------------------------------------
#   Create <java_close/>.
# ---------------------------------------------------------------------------
function java_create_class_close (java_class, class, java_project, meta)
    check_arguments (my, "java_class, class, java_project, meta", my)

    java_create_c_class_close (my.class, my.java_project, my.meta)
    java_create_jni_class_close (my.class, my.java_project, my.meta)

    new java_implement to my.java_class
        .type = "AutoCloseable"
    endnew

    new java_method to my.java_class
        . = "/* Clear resources. */"
        .name = "clearResources"
        .visibility = "private"

        new java_code to java_method
            . = format_left("\
                long ctx = this.cCtx;
                if (this.cCtx > 0) {
                    this.cCtx = 0;
                    $(java_derive_jni_context_class_name(my.java_project)).INSTANCE.$(my.class.name:Camel)_close(ctx);
                }
            ")
        endnew
    endnew

    new java_method to my.java_class
        . = "/* Close resource. */"
        .name = "close"
        .visibility = "public"

        new java_code to java_method
            . = "clearResources();"
        endnew
    endnew

    new java_method to my.java_class
        . = "/* Finalize resource. */"
        .name = "finalize"
        .visibility = "protected"
        .throws = "Throwable"

        new java_code to java_method
            . = "clearResources();"
        endnew
    endnew
endfunction

# ---------------------------------------------------------------------------
#   Create Java computed constant that makes proxy to retrieve constant.
# ---------------------------------------------------------------------------
function java_create_jni_method_from_constant (constant, interface, destination, java_project, meta)
    check_arguments (my, "constant, interface, destination, java_project, meta", my)

    # Obtain JNI class
    my.jni_context_class_name = java_derive_jni_context_class_name(my.java_project)
    my.jni_module = my.java_projects_destination->java_module(java_module.name = my.jni_context_class_name)?
    my.jni_context_class = my.jni_module->java_class

    # Build Java method
    my.getter_method_name = java_derive_getter_name_by_constant (my.constant, my.java_project)
    my.jni_method_name = "$(my.interface.name:Camel)_$(my.getter_method_name:Camel)"

    # Create method if it doesn't exist
    if ! defined (my.jni_context_class->java_method(java_method.name = my.jni_method_name)?)

        # Create declaration
        new java_method to my.jni_context_class
            . = java_format_description (my.constant) ?
            .name = my.jni_method_name
            .visibility = "public"
            .native = "native"

            java_create_jni_context_argument (java_method, my.java_project, my.meta)

            new java_return to java_method
                .type = java_derive_constant_type (my.constant, my.java_project)
                .access = "readonly"
                .is_enum = "0"
                .is_reference = "0"
            endnew

            return java_method
        endnew

    endif

endfunction

# ---------------------------------------------------------------------------
#   Add <java_method/> with setter only that proxy dependency to the
#   C context.
# ---------------------------------------------------------------------------
function java_create_method_from_dependency (dependency, impl, destination, java_project, meta)
    check_arguments (my, "dependency, impl, destination, java_project, meta", my)

    echo_info ("Create method from dependency '$(my.dependency.name)' for class: '$(my.impl.name:)'", my)

    new java_method to my.destination
        . = java_format_description (my.dependency) ?
        .name = java_derive_method_name_str (cat ("set", my.dependency.name))
        .visibility = "public"

        if is_true (my.dependency.has_observers) & is_true (my.dependency.is_observers_return_status)
            .throws = java_derive_default_exception_name (my.java_project)
        endif

        my.arg_name = java_derive_argument_name (my.dependency)

        new java_argument to java_method
            .name = my.arg_name
            .type = java_derive_dependency_type (my.dependency)
        endnew

        new java_code to java_method
            . = format_left("\
                $(java_derive_jni_context_class_name(my.java_project)).INSTANCE.$(my.impl.name:Camel)_$(java_method.name:)(this.cCtx, $(my.arg_name:));
            ")
        endnew
    endnew

    java_create_jni_method_from_dependency (my.dependency, my.impl, my.destination, my.java_project, my.meta)
    java_create_c_method_from_dependency (my.dependency, my.impl, my.destination, my.java_project, my.meta)

endfunction

