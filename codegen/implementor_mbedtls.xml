            <constant name = "digest size" value = "32" />
        </interface>

        <interface name = "hash">
        </interface>

        <interface name = "hash stream">
            <context name = "hash ctx" class = "void" access = "readwrite" is_reference="1"/>
        </interface>

    </implementation>
